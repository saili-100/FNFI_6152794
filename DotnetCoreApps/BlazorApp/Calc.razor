<h3>Calc</h3>
<div>
    <input type="number"  tabindex ="firstValue" placeholder="First Value" />
    <select @bind ="operation">
        <option value="+">+ </option>
        <option value="-">- </option>
        <option value="*">* </option>
        <option value="/">/ </option>
    </select>

    <input type="number" tabindex="secondValue" placeholder="Second Value" />
    <button @onclick="Calculator">Calculate</button>

    <span>@result</span>
</div>

@code {
    private double firstValue;
    private double secondValue;
    private string operation = "+";
    private string result;

   
        private void Calculator()
    {
        try
        {
            result = operation switch
            {
                "+" => (firstValue + secondValue).ToString(),
                "-" => (firstValue - secondValue).ToString(),
                "*" => (firstValue * secondValue).ToString(),
                "/" => secondValue != 0 ? (firstValue / secondValue).ToString() : "Cannot divide by zero",
                _ => "Invalid operation"
            };
        }
        catch (Exception ex)
        {
            result = $"Error: {ex.Message}";
        }
    }
       
}


